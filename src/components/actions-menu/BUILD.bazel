package(default_visibility = ["//visibility:public"])

load("//src/e2e-app:test_suite.bzl", "e2e_test_suite")
load(
    "//tools:defaults.bzl",
    "markdown_to_html",
    "ng_e2e_test_library",
    "ng_module",
    "ng_test_library",
    "ng_web_test_suite",
)


ng_module(
    name = "actions-menu",
    srcs = glob(
        ["**/*.ts"],
        exclude = ["**/*.spec.ts"],
    ),
    assets = glob(["**/*.html"]),
    module_name = "@gsa-sam/components/actions-menu",
    deps = [
        "//src/components/core",
        "//src/components/menu",
        "@npm//@angular/common",
        "@npm//@angular/core",
        "@npm//@angular/forms",
        "@npm//@angular/router",
        "@npm//@fortawesome/angular-fontawesome",
        "@npm//@fortawesome/fontawesome-svg-core",
        "@npm//@fortawesome/free-solid-svg-icons",
        "@npm//@angular/animations",
    ],
)

ng_test_library(
    name = "unit_test_sources",
    srcs = glob(
        ["**/*.spec.ts"],
        exclude = ["**/*.e2e.spec.ts"],
    ),
    deps = [
        ":actions-menu",
        "//src/components/core",
        "@npm//@angular/platform-browser",
        "@npm//@angular/router",
    ],
)

ng_web_test_suite(
    name = "unit_tests",
    deps = [":unit_test_sources"],
)

ng_e2e_test_library(
    name = "e2e_test_sources",
    srcs = glob(["**/*.e2e.spec.ts"]),
    deps = [
        # "//src/cdk/private/testing/e2e",
    ],
)

e2e_test_suite(
    name = "e2e_tests",
    deps = [
        ":e2e_test_sources",
        # "//src/cdk/private/testing/e2e",
    ],
)

markdown_to_html(
    name = "overview",
    srcs = [":actions-menu.md"],
)

filegroup(
    name = "source-files",
    srcs = glob(["**/*.ts"]),
)
